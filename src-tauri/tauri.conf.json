{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Praymodoro",
  "version": "1.0.2",
  "identifier": "com.praymodoro.timer",
  "build": {
    "frontendDist": "../dist-tauri",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Praymodoro",
        "label": "main",
        "width": 200,
        "height": 450,
        "x": 100,
        "y": 100,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "resizable": false,
        "shadow": false,
        "skipTaskbar": true,
        "visibleOnAllWorkspaces": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": null,
      "minimumSystemVersion": "10.15"
    }
  }
}
